{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2017"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true
  },
  "include": [
    "./jest.config.ts",
    "./setupTests.ts",
    "./next.config.js",
    "./server.js",
    "./next-env.d.ts",
    "./pages",
    "./components",
    "./styles",
    "./translation",
    "./lib",
    "./types/types.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
